<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="7dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilItem"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/avatar"
                app:civ_border_color="@color/purple_200"
                app:civ_border_overlay="true"
                app:civ_border_width="2.5dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/profilItem"
                android:layout_toRightOf="@+id/profilItem"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kullanıcı Adı"
                    android:textColor="#3d4357"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/durum"
                    android:layout_width="35mm"
                    android:layout_height="wrap_content"
                    android:text="Kullanıcı Durumu"
                    android:textColor="#3d4357"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/zaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="17/12/2020 21:34"
                    android:textColor="#bfbf00" />

                <!-- <TextView
                   android:id="@+id/uzaklik"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="110 m uzaklıkta"
                   android:textColor="#074741"/>-->

                <TextView
                    android:id="@+id/adresler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Musalla Mhallesi Atak Sokak"
                    android:textColor="@color/purple_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="7dp">

                    <ImageView
                        android:id="@+id/resimler"
                        android:layout_width="110dp"
                        android:layout_height="90dp"
                        android:src="@drawable/avatar" />

                    <ImageView
                        android:id="@+id/resimler2"
                        android:layout_width="110dp"
                        android:layout_height="90dp"
                        android:src="@drawable/avatar" />


                </LinearLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/maps"
                tools:ignore="VectorDrawableCompat" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>